{% extends '::base.html.twig' %}

{% block body %}
<h1>Item list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Quantity</th>
            <th>Location</th>
            <th>Actions</th>
            <th>Picture</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('item_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.quantity }}</td>
            <td>{{ entity.location }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('item_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('item_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
            <td>
                {% if entity.picture %}
                    <img src="/{{ entity.getUploadDir }}/{{entity.picture.getFilename }}" />
                {% else %}
                     FAIL 
                {% endif %}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('item_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}
