<head>
  <meta charset="utf-8">

  <!-- Use the .htaccess and remove these lines to avoid edge case issues.
       More info: h5bp.com/b/378 -->
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title>{% block title %}Welcome!{% endblock %} - Direct Touq Touq</title>
  <meta name="description" content="">
  <meta name="author" content="JLou">

  <!-- Mobile viewport optimized: j.mp/bplateviewport -->
  <meta name="viewport" content="width=device-width,initial-scale=1">

  <!-- Place favicon.ico and apple-touch-icon.png in the root directory: mathiasbynens.be/notes/touch-icons -->

  <!-- CSS: implied media=all -->
  <!-- CSS concatenated and minified via ant build script-->
  <link href='http://fonts.googleapis.com/css?family=Delius+Unicase' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    
  <link rel="stylesheet" href="http://twitter.github.com/bootstrap/assets/css/bootstrap-1.1.0.min.css">
  
  {% block stylesheets %}{% endblock %}
  <!-- end CSS-->

  <!-- More ideas for your <head> here: h5bp.com/d/head-Tips -->

  <!-- All JavaScript at the bottom, except for Modernizr / Respond.
       Modernizr enables HTML5 elements & feature detects; Respond is a polyfill for min/max-width CSS3 Media Queries
       For optimal performance, use a custom Modernizr build: www.modernizr.com/download/ -->
  <script src="{{ asset('js/libs/modernizr-2.0.6.min.js') }}"></script>
</head>

<body style="padding-top: 40px;">

  <div id="container">
    <header>
        <div class="topbar-wrapper" style="z-index: 5;">
            <div class="topbar">
              <div class="fill">
                <div class="container">
                  <h3><a href="#">Touq Touq</a></h3>
                  <ul>
                        <li class="active"><a href="{{ path('homepage') }}">Home</a></li>
                        <li><a href="{{ path('idees') }}">Idées</a></li>
                        <li><a href="{{ path('item') }}">Inventaire</a></li>
                        <li><a href="{{ path('picture') }}">Photos</a></li>
                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        <li style="margin-left: 15px; border-left:1px solid #333;">
                            <span style="display:inline-block;float:none;padding:10px 10px 11px;line-height:19px;text-decoration:none;">
                                {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}
                            </span>
                            <a href="{{ path('fos_user_security_logout') }}" style="display:inline-block">
                                {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                            </a>
                        </li>
                        {% endif %}
                        <li>
                            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}                                
                            
                            {% else %}
                                <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
                            {% endif %}
                        </li>
                  </ul>
                  <div class="login-form" style="line-height: 40px; float: right; margin-left:15px">
                    
            </div>
                </div>
              </div><!-- /fill -->
            </div><!-- /topbar -->
          </div>
            <h1>Mamie Touq<br/>
            <small>Le site dédié à la super Mamie Touq</small></h1>
    </header>
	<div id="main" class="" role="main">	    
	    <div class="content">
                 {% block body %}{% endblock %}
	    </div> <!-- end of .content -->
	</div> <!-- end of #main -->
    <footer>
        Copyright &copy; Touq Touq 1914-2011<br>
        Tout profit réalisé grâce à ce site ou grâce au nom &laquo; Touq&trade; &raquo; devra être intégralement versé avec intérêts à
        Mamie Touq.
    </footer>
  </div> <!--! end of #container -->

    {% block javascripts %}{% endblock %}

  <!-- JavaScript at the bottom for fast page loading -->

  <!-- Grab Google CDN's jQuery, with a protocol relative URL; fall back to local if offline -->
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js"></script>
  <script>window.jQuery || document.write('<script src="{{ asset('js/libs/jquery-1.6.2.min.js') }}"><\/script>')</script>


  <!-- scripts concatenated and minified via ant build script-->
  <script defer src="{{ asset('js/plugins.js') }}"></script>
  <script defer src="{{ asset('js/script.js') }}"></script>
  <!-- end scripts-->

	
  <!-- Change UA-XXXXX-X to be your site's ID -->
  <script>
    window._gaq = [['_setAccount','UAXXXXXXXX1'],['_trackPageview'],['_trackPageLoadTime']];
    Modernizr.load({
      load: ('https:' == location.protocol ? '//ssl' : '//www') + '.google-analytics.com/ga.js'
    });
  </script>


  <!-- Prompt IE 6 users to install Chrome Frame. Remove this if you want to support IE 6.
       chromium.org/developers/how-tos/chrome-frame-getting-started -->
  <!--[if lt IE 7 ]>
    <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.3/CFInstall.min.js"></script>
    <script>window.attachEvent('onload',function(){CFInstall.check({mode:'overlay'})})</script>
  <![endif]-->
  
</body>
</html>