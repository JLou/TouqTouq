{% extends "FOSUserBundle::layout.html.twig" %}



{% block fos_user_content %}
<div class="row show-grid" title="Half and half">
    <div class="" style="float:left; border-right:1px dashed grey; margin-right:-1px; width:50%;">
        {% if error %}
            <div class="alert-message error">{{ error|trans({}, 'SecurityBundle') }}</div>
        {% endif %}
        <form action="{{ path("fos_user_security_check") }}" method="post">
            <fieldset>
            <legend>Formulaire de connexion</legend>
            <div class="clearfix">
                <label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
                <div class="input">
                    <input class="xlarge" id="username" name="_username" size="30" type="text" value="{{ last_username }}">
                </div>
            </div> <!-- /clearfix -->
            
            <div class="clearfix">
                <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
                <div class="input">
                    <input class="xlarge" size="30" type="password" id="password" name="_password" >
                </div>
            </div> <!-- /clearfix -->
            
            <div class="clearfix">
                <div class="input">
                    <ul class="inputs-list">
                        <li>
                          <label>
                                <input type="checkbox" id="remember_me" name="_remember_me" value="on"
                                       checked="checked" />
                                <span>{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</span>
                            </label>
                        </li>                
                      </ul>                
                </div>
            </div> <!-- /clearfix -->
            <div class="actions">
                <button type="submit" class="btn primary" id="_submit" name="_submit" />{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}</button>
                &nbsp;
                <button type="reset" class="btn">Cancel</button>
            </div>
        </fieldset>
        </form>
    </div>
    <div class="" style="float:left; width:50%; ">
        <p style="padding: 10px;">Pas encore membre ?<br/>        
        <a href="{{ path('fos_user_registration_register') }}">Inscrivez-vous</a> dès à présent !</p>
    </div>
</div>
{% endblock fos_user_content %}
